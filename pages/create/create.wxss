page {
  background: #ffffff;
  display: flex;
  flex-direction: column;
  justify-content: flex-start;
}
.save{
  margin-top: 2rpx;
  position: absolute;
  width: 50rpx;
  height: 50rpx;
  left: 90%;
  top: 0%;  
}
.savepic{
  width: 60rpx;
  height: 60rpx;
}
.savtext{
  width: 80rpx;
  font-size: small;
}
.newtext{
  display: flex;
  margin-top: 60rpx;
  align-content: center;
  justify-content: center;

}
.top{
  justify-content: center;
  align-content: center;
  display: flex;
  width: 80%;
}
.arrowblock {
  display: flex;
  justify-content: center;
}

.arrow {
  margin-top: 20rpx;
  display: flex;
  height: 50rpx;
  width: 50rpx;

}

.ad {
  margin-top: 50rpx;
  display: flex;
  justify-content: center;
  margin-bottom: 30rpx;
}

.del {
  display: flex;
  height: 50rpx;
  width: 50rpx;
  margin-right: 23rpx;
  left: 480rpx;
}

.write {
  display: flex;
  height: 50rpx;
  width: 50rpx;
  margin-right: 23rpx;
  left: 470rpx;
}

.row {
  display: flex;
  flex-direction: row;
  align-items: center;
  height: 100rpx;
  background: #f3f3f3;
}

.hintText {
  display: flex;
  font-size: 50rpx;
  width: 80%;
  justify-content: center;
  
}

.addressRow {
  display: flex;
  background: #f7f7f7;
  align-items: center;
  border-style: none;
  border-radius: 50px;
  border-color: #777777;
}

.rightArrow {
  display: flex;
  width: 36rpx;
  height: 36rpx;
}